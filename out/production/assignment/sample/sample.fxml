<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" vgap="10">
    <GridPane GridPane.columnIndex="0" GridPane.rowIndex="0" vgap="10">
        <Button onAction="#uploadFiles" fx:id="upload" text="Upload" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button onAction="#downloadFiles" fx:id="download" text="Download" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    </GridPane>

    <ListView fx:id="clientView" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <ListView fx:id="serverView" GridPane.rowIndex="1" GridPane.columnIndex="1"/>



</GridPane>